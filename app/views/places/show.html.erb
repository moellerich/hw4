<% if @current_user %>
  <h1><%= @place["name"] %></h1>

  <h2>My Entries</h2>
  <% for entry in @entries %>
    <h3><%= entry["title"] %></h3>
    <h4><%= entry["occurred_on"] %></h4>
    <img src="<%= entry["image"] %>" class="img-fluid w-full">
    <p><%= entry["description"] %></p>
  <% end %>

  <p>
    <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
  </p>

<% end %>