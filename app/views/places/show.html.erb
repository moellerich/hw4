<% if @current_user %>
  <div class="row">
    <h1><%= @place["name"] %></h1>
  <p>
    <a href="/entries/new?place_id=<%= @place["id"] %>"><button class="btn btn-outline-primary">New Post</button></a>
  </p>
  </div>
  
  <div class="row">
  <% for entry in @entries %>
    <div class="col-12 col-md-6 col-lg-4">
    <h3><%= entry["title"] %></h3>
    <h4><%= entry["occurred_on"] %></h4>
    <img src="<%= entry["image"] %>" class="img-fluid w-full">
    <p><%= entry["description"] %></p>
  </div>
  <% end %>
</div>
<% end %>
</div>